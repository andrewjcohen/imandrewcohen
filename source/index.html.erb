---
pageable: true
per_page: 10
---
<% page_articles.each_with_index do |article, i| %>
  <article>
    <header>
      <h2><%= link_to article.title, article %></h2>
    </header>
    <!-- use article.summary(250) if you have Nokogiri available to show just
         the first 250 characters -->
    <%= article.body %>

    <footer>
      <span><%= article.date.strftime('%b %e, %Y') %></span>
      <% if article.tags %> //
        <% article.tags.each do |tag| %>
          #<%= tag %>
        <% end %>
      <% end %>
    </footer>
  </article>
<% end %>


<footer id="pagination">
  <% if paginate && num_pages > 1 %>
    <% if prev_page %>
      <%= link_to '<i class="fa fa-arrow-circle-o-left"></i>', prev_page %>
    <% end %>

    <strong>Page <%= page_number %> of <%= num_pages %></strong>
  <% end %>

  <% if paginate %>
    <% if next_page %>
      <%= link_to '<i class="fa fa-arrow-circle-o-right"></i>', next_page %>
    <% end %>
  <% end %>
</footer>

